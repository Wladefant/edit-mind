# =========================
# 1️⃣ Base image for pnpm
# =========================
FROM node:22.20.0 AS base
ENV PNPM_HOME="/pnpm"
ENV PATH="$PNPM_HOME:$PATH"
RUN corepack enable
WORKDIR /app

# =========================
# 2️⃣ Install dependencies
# =========================
FROM base AS deps
COPY pnpm-workspace.yaml ./
COPY pnpm-lock.yaml ./
COPY package.json ./
COPY apps/web/package.json ./apps/web/
COPY apps/background-jobs/package.json ./apps/background-jobs/
RUN pnpm install --ignore-scripts
RUN pnpm rebuild @tailwindcss/oxide
COPY packages/prisma ./
RUN pnpm prisma generate 

# =========================
# 3️⃣ Build app
# =========================
FROM base AS build
COPY --from=deps /app/node_modules ./node_modules
COPY . .
RUN pnpm --filter web build

# =========================
# 4️⃣ Production runtime
# =========================
FROM base AS final
COPY --from=deps /app/node_modules ./node_modules
COPY --from=build /app/apps/web/build ./apps/web/build
COPY --from=build /app/apps/web/package.json ./apps/web/
COPY --from=build /app/package.json ./
COPY --from=build /app/pnpm-lock.yaml ./
COPY --from=build /app/pnpm-workspace.yaml ./
RUN pnpm install --ignore-scripts
COPY packages/prisma ./

EXPOSE 3745
CMD ["sh", "-c", "pnpm prisma migrate deploy && pnpm --filter web start"]
