datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Folder {
  id        String   @id @default(cuid())
  path      String   @unique
  createdAt DateTime @default(now())
  jobs      Job[]
}

model Job {
  id         String   @id @default(cuid())
  videoPath  String
  status     String   @default("pending")
  createdAt  DateTime @default(now())
  folderId   String?
  folder     Folder?  @relation(fields: [folderId], references: [id])
}