{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "module": "ESNext",     
    "target": "ES2020",
    "outDir": "dist",
    "moduleResolution": "Node",
    "strict": true,
    "skipLibCheck": true,
    "paths": { "@shared/*": ["./*"] }
  },
  "include": ["**/*.ts"]
}
