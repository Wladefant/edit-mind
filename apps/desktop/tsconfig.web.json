{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "app/index.d.ts",
    "app/**/*",
    "lib/**/*",
    "lib/conveyor/*.d.ts",
    "resources/**/*",
    "../../packages/ui/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "types": ["electron-vite/node"],
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../packages/shared/*"],
      "@ui/*": ["../../packages/ui/src/*"]
    }
  },
  "references": [{ "path": "../../packages/shared" }]
}
